<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chenyunlong.zhangli.mapper.ActivityMapper">


    <resultMap id="BaseResultMap" type="chenyunlong.zhangli.entities.Activity">
        <id column="activity_id" property="activityId"/>
        <result column="activity_name" property="activityName"/>
    </resultMap>

    <select id="getActivityList" resultMap="BaseResultMap">
        SELECT activity_id,activity_name FROM activity
    </select>


    <select id="getActivityById" resultMap="BaseResultMap" parameterType="long">
        select activity_id,activity_name from activity where activity_id=#{activityId}
    </select>

    <insert id="insert" parameterType="chenyunlong.zhangli.entities.Activity">
        insert into activity(activity_name)values(#{activityName})
    </insert>
</mapper>